<%= form_for @post do |p| %>
  <div class="form-row">
    <div class="col-md-4 mb-3">
      <%= p.label :title, "Title"%>
      <%= p.text_field :title, class:'form-control is-valid', :required=>true%>
      <div class="invalid-feedback">
          Please choose a Title.
      </div>
    </div>
    
  </div>
  <div class="form-row">
    <div class="col-md-4 mb-3">
      <%= p.label :description, "Description"%>
      <%= p.text_area :description, class:'form-control is-valid', :required=>true%>
      <div class="invalid-feedback">
          Please enter Description.
      </div>
    </div>
    
  </div>
  <%= p.submit "Submit", class:"btn btn-primary" %>
  <% end %>

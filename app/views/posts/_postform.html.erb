<div class="container-fluid">
<%= form_for @post do |p| %>
  <div class="form-row justify-content-center">
    <div class="col-md-6 mb-3 ">
      <%= p.label :title, "Title"%>
      <%= p.text_field :title, class:'form-control is-valid', :required=>true%>
      <div class="invalid-feedback">
          Please choose a Title.
      </div>
    </div>
    
  </div>
  <div class="form-row justify-content-center">
    <div class="col-md-6 mb-3">
      <%= p.label :description, "Description"%>
      <%= p.text_area :description,rows: 10, class:'form-control is-valid', :required=>true%>
      <div class="invalid-feedback">
          Please enter Description.
      </div>
    </div>
    
  </div>
  <br/>
  <div class="actions form-row justify-content-center">
    <%= p.submit "Submit", class:"btn btn-primary center col-md-4" %>
  </div>
  <% end %>
</div>
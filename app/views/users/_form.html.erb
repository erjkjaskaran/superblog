
<%= form_for @user do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation" class="alert alert-danger alert-dismissible fade show" role="alert">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  <% end %>

<div class="container-fluid col-md-4" style="margin:auto;">
<div class="mb-3">
    <%= form.label :username %><br/>
    <%= form.text_field :username, class:'form-control is-valid', :required=>true%>
      <div class="invalid-feedback">
          Please enter Username.
      </div>
  </div>

  <div class="mb-3 justify-content-center">
    <%= form.label :email %>
    <%= form.text_field :email, class:'form-control is-valid', :required=>true %>
    <div class="invalid-feedback">
          Please enter Email.
      </div>
  </div>

  <div class="mb-3 justify-content-center">
    <%= form.label :password %>
    <%= form.password_field :password, class:'form-control is-valid', :required=>true %>
    <div class="invalid-feedback">
          Please enter password.
      </div>
  </div>

  <div class="actions justify-content-center">
    <%= form.submit(@user.new_record? ? "Sign Up" : "Update Account", class:"btn btn-primary btn-block") %>
  </div>
</div>
<% end %>
